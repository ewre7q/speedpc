-- Speed Keybinding
function onSelected(mouse)
    mouse.KeyDown:connect(function(key)
        if key:lower() == "z" then
            onButton1Down(mouse)
        elseif key:lower() == "9" then
            -- Toggles hitbox visibility when "9" is pressed
            getgenv().Config['HideBoxes'] = not getgenv().Config['HideBoxes']
            game.StarterGui:SetCore("SendNotification", {
                Title = "Hitbox Toggled",
                Text = getgenv().Config['HideBoxes'] and "Hitboxes Hidden" or "Hitboxes Visible",
                Duration = 1.5,
            })
        end
    end)

    mouse.KeyUp:connect(function(key)
        if key:lower() == "z" then
            onButton1Up(mouse)
        end
    end)
end

-- Initiate keybinding for the local player
onSelected(plr:GetMouse())

-- Notification for Speed Script Enabled
game.StarterGui:SetCore("SendNotification", {
    Title = "Speed Enabled",
    Text = "Press Z for Speed",
    Duration = 5,
})

